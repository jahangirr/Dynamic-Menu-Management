<!DOCTYPE html>
<html>
<head>
   
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Interior Design</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @Styles.Render("~/Content/themes/base/css")


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")

</head>
<body style="background-color:seagreen">

    <div>
        <table>
            <tr>
               

                <td width="100%">
                    
                        <div class="navbar navbar-inverse">
                            <div class="container">

                                <style>
                                    .carousel-inner > .item > img,
                                    .carousel-inner > .item > a > img {
                                        width: 70%;
                                        margin: auto;
                                    }
                                </style>


                                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                                    <!-- Indicators -->
                                    <ol class="carousel-indicators">
                                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                                        <li data-target="#myCarousel" data-slide-to="1"></li>
                                        <li data-target="#myCarousel" data-slide-to="2"></li>
                                        <li data-target="#myCarousel" data-slide-to="3"></li>
                                    </ol>

                                    <!-- Wrapper for slides -->
                                    <div class="carousel-inner" role="listbox">

                                        <div class="item active">

                                            @{
                                                HtmlString hostAddress = null;
                                                if (Session["HostAddress"] != null)
                                                {
                                                    hostAddress = new HtmlString(Session["HostAddress"].ToString());
                                                }

                                            }
                                            <img src="@hostAddress/Pic/ImageOne.jpg" alt="Chania" width="460" height="345" />

                                            <div class="carousel-caption">
                                                <h3>Flower </h3>
                                                <p>Speaks the innocence ever found </p>
                                            </div>
                                        </div>

                                        <div class="item">
                                            <img src="@hostAddress/Pic/imageTwo.jpg" alt="Chania" width="460" height="345" />

                                            <div class="carousel-caption">
                                                <h3>Priceless </h3>
                                                <p>Serene beauty ever felt</p>
                                            </div>
                                        </div>

                                        <div class="item">
                                            <img src="@hostAddress/Pic/ImageThree.jpg" alt="Flower" width="460" height="345" />

                                            <div class="carousel-caption">
                                                <h3> Soul's Food </h3>
                                                <p> Let Inner attire to be purified with the touch of it  </p>
                                            </div>
                                        </div>

                                        <div class="item">
                                            <img src="@hostAddress/Pic/imageTwo.jpg" alt="Flower" width="460" height="345" />

                                            <div class="carousel-caption">
                                                <h3>Speed of Going ahead</h3>
                                                <p>Human Thought can be geared up begin closer to it </p>
                                            </div>
                                        </div>

                                    </div>

                                    <!-- Left and right controls -->
                                    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>

                              


                                <div class="navbar-header">

                                   
                                    @*@Html.ActionLink("", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                                    @Html.ActionLink("Start Page ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

                                </div>

                                <div>

                                    @Html.Partial("_LoginPartial")

                                </div>



                            </div>
                        </div>

                   


                </td>
            </tr>
        </table>

    </div>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - *********** </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/Highcharts-4.0.1/js/highcharts.js"></script>

    @RenderSection("scripts", required: false)

   

</body>
</html>

