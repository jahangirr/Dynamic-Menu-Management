@model IEnumerable<InteriorDesign.Models.RoleMenuMapping>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    Html.RenderPartial("MenuView");
}

<!DOCTYPE html>

<html>
<head>

    <link href="~/Content/TableStyle.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "ReLoadExistingPermission")
    </p>
    <link href="~/Content/TableStyle.css" rel="stylesheet" />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.RoleIdText)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.MenuInfoIdText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CanView)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CanCreate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CanEdit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CanDelete)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CanClose)
            </th>
            
        </tr>
    
    @foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.RoleIdText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MenuInfoIdText)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.CanView)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CanCreate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CanEdit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CanDelete)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CanClose)
            </td>

           
        </tr>
    }
    
    </table>
</body>
</html>
