@model  List<InteriorDesign.Models.MenuInfo>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<!DOCTYPE html>

<html>
<head>

    <link href="~/Content/TableStyle.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>




    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">


            <h4>RoleMenuMapping</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.Label("User Role", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">


                      @{ 

                          HtmlString hsRoleNameParm = new HtmlString(ViewBag.RoleNamePram as string);
                      }

                        @Html.DropDownList("RoleName", (SelectList)ViewBag.RoleName)


                       <script type="text/javascript">

                           $.fn.selectFirst = function () {
                               return $(this).find("option:first").attr("selected", "selected").end();
                           }

                           $(document).ready(function () {

                               $('#RoleName').selectFirst();

                           });
                          


                       </script>

                      
                   
                </div>
            </div>



            @{

                int totalMenu = (Int32)ViewBag.totalMenu;

                <table class="table">

                    <tr>
                        <th>
                           <h3>Active</h3> 
                        </th>
                        <th>
                          <h3> Menu Name</h3>
                            
                        </th>
                        <th>
                           <h3>Menu Url</h3>
                        </th>
                        <th>
                            <h3>Can View</h3>
                           
                        </th>
                        <th>
                           <h3> Can Create</h3>
                        </th>
                        <th>
                            <h3> Can Edit</h3>
                        </th>
                        <th>
                            <h3> Can Delete</h3>
                          
                        </th>
                        <th>
                            <h3> Can Close</h3>

                        </th>


                    </tr>

                    @for (var i = 0; i < totalMenu; i++)
                    {


                    <tr>
                        <td>
                            @Html.CheckBoxFor(it => it[i].Active, new { Style = "vertical-align:3px}" })
                        </td>
                        <td>
                            @Html.HiddenFor(it => it[i].Id)
                            @Html.DisplayFor(it => it[i].MenuName)
                        </td>
                        <td>
                            @Html.DisplayFor(it => it[i].MenuURL)
                        </td>
                        <td>
                            @Html.CheckBoxFor(it => it[i].CanView, new { Style = "vertical-align:3px}" })
                        </td>
                        <td>
                            @Html.CheckBoxFor(it => it[i].CanCreate, new { Style = "vertical-align:3px}" })
                        </td>
                        <td>
                            @Html.CheckBoxFor(it => it[i].CanEdit, new { Style = "vertical-align:3px}" })
                        </td>
                      
                        <td>
                            @Html.CheckBoxFor(it => it[i].CanDelete, new { Style = "vertical-align:3px}" })
                        </td>
                        <td>
                            @Html.CheckBoxFor(it => it[i].CanClose, new { Style = "vertical-align:3px}" })
                        </td>


                    </tr>


                    }
                </table>
            }

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
                }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
