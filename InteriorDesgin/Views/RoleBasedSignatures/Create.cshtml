@model InteriorDesign.Models.RoleBasedSignature

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>



@using (Html.BeginForm("Create", "RoleBasedSignatures", FormMethod.Post, new { @enctype = "multipart/form-data", @id = "myForm" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal alert-info">
        <h4>Role Based Signature Management</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.RoleName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("RoleName", (SelectList)ViewBag.RoleData)
               
                
            </div>
        </div>

      

        <div class="form-group">
            @Html.LabelFor(model => model.IsAcive, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.CheckBoxFor(model => model.IsAcive, new { htmlAttributes = new { @class = "form-control" } })
                   
                </div>
            </div>
        </div>

  

        <div class="form-group">
          
            <div class="col-md-10">
                <input name="image" type="file" />
               
            </div>
        </div>

        <div style="border:groove;background-color:gray;color:maroon;visibility:hidden;">
            <strong>Create Date:</strong>
            @Html.JQueryUI().DatepickerFor(model => model.CreateTime)
            @Html.ValidationMessageFor(model => model.CreateTime, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


