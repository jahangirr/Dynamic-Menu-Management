        } else {
            sessionStorage.setItem("POPreSheet_MOMSprOrIndentNo", POPreSheet_MOMSprOrIndentNo_value);
        }




        var POPreSheet_PONumber_value = sessionStorage.getItem("POPreSheet_PONumber");
