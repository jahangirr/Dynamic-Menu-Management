                </tr>

            </table>

        </p>
                            }

</div>




<script type="text/javascript">
    $(document).ready(function () {


        $('#bReset').click(function () {

            $('#PONumber').val('');
            $('#PORevisedDate').val('');
            $('#MOMSprOrIndentNo').val('');
            $('#SprOrIndentNo').val('');
            $('#SupplierCode').val('');
            $('#SupplierName').val('');
            $('#ItemName').val('');
            $('#ItemCode').val('');
            $('#Remarks').val('');


            sessionStorage.setItem("POPreSheet_PONumber", '');
            sessionStorage.setItem("POPreSheet_SprOrIndentNo", '');
            sessionStorage.setItem("POPreSheet_MOMSprOrIndentNo", '');
            sessionStorage.setItem("POPreSheet_ItemCode", '');
            sessionStorage.setItem("POPreSheet_ItemName", '');
            sessionStorage.setItem("POPreSheet_PORevisedDate", '');
            sessionStorage.setItem("POPreSheet_SupplierCode", '');
            sessionStorage.setItem("POPreSheet_SupplierName", '');
            sessionStorage.setItem("POPreSheet_Remarks", '');


        });




        var POPreSheet_ItemCode_value = sessionStorage.getItem("POPreSheet_ItemCode");
        if (POPreSheet_ItemCode_value == null) {
            sessionStorage.setItem("POPreSheet_ItemCode", '');
        } else {
            sessionStorage.setItem("POPreSheet_ItemCode", POPreSheet_ItemCode_value);
        }

        var POPreSheet_ItemName_value = sessionStorage.getItem("POPreSheet_ItemName");
