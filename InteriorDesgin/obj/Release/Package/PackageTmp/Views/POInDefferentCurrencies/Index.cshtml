            sessionStorage.setItem("POPreSheet_Remarks", '');
        } else {
            sessionStorage.setItem("POPreSheet_Remarks", POPreSheet_Remarks_value);
        }






        $('#ItemCode').change(function () {

            sessionStorage.setItem("POPreSheet_ItemCode", $('#ItemCode').val());
        });



        $('#SprOrIndentNo').change(function () {

            sessionStorage.setItem("POPreSheet_SprOrIndentNo", $('#SprOrIndentNo').val());
        });

        $('#MOMSprOrIndentNo').change(function () {

            sessionStorage.setItem("POPreSheet_MOMSprOrIndentNo", $('#MOMSprOrIndentNo').val());
        });

        $('#PONumber').change(function () {

            sessionStorage.setItem("POPreSheet_PONumber", $('#PONumber').val());
        });

        $('#PORevisedDate').change(function () {

            sessionStorage.setItem("POPreSheet_PORevisedDate", $('#PORevisedDate').val());
        });
        $('#SupplierCode').change(function () {

            sessionStorage.setItem("POPreSheet_SupplierCode", $('#SupplierCode').val());

        });




        $('#SupplierName').change(function () {

            sessionStorage.setItem("POPreSheet_SupplierName", $('#SupplierName').val());

        });

        $('#Remarks').change(function () {

            sessionStorage.setItem("POPreSheet_Remarks", $('#Remarks').val());

        });



        $('#ItemName').change(function () {

            sessionStorage.setItem("POPreSheet_ItemName", $('#ItemName').val());

        });








        $("#SearchInfoTable tr").each(function () {
            $(this).hide();
        });

        $("#selectionItems").change(function () {

            $("#SearchInfoTable tr").each(function () {
                var row_index = $(this).index();
                var ddlValue = $("#selectionItems").val();
                if (ddlValue.toString() == row_index.toString()) {
                    $(this).show();
                }
                else {
                    $(this).hide();
                }

            });


            var ItemCode = sessionStorage.getItem("POPreSheet_ItemCode");
            var ItemName = sessionStorage.getItem("POPreSheet_ItemName");
            var SprOrIndentNo = sessionStorage.getItem("POPreSheet_SprOrIndentNo");
            var MOMSprOrIndentNo = sessionStorage.getItem("POPreSheet_MOMSprOrIndentNo");
            var PONumber = sessionStorage.getItem("POPreSheet_PONumber");
            var PORevisedDate = sessionStorage.getItem("POPreSheet_PORevisedDate");
            var SupplierCode = sessionStorage.getItem("POPreSheet_SupplierCode");
            var SupplierName = sessionStorage.getItem("POPreSheet_SupplierName");
            var Remarks = sessionStorage.getItem("POPreSheet_Remarks");



            var ListOfSelectedValue = 'Item Code : ' + ItemCode + 'Mother SPR or Indent No :' + MOMSprOrIndentNo + '||  Spr Or Indent No : ' + SprOrIndentNo + '||  PO Number : ' + PONumber + '||  PO Revised Date : ' + PORevisedDate + '||  SupplierCode : ' + SupplierCode + '||  SupplierName : ' + SupplierName
            + '||Remarks : ' + Remarks + '||   ItemName : ' + ItemName;

            $('#selectionDivToShow').html(ListOfSelectedValue.toString());


        });




    });
</script>




