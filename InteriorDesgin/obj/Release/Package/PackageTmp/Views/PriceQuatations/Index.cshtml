            </tr>
        </table>





        <p>
            <table id="SearchInfoTable" class="table" style="color:black;">
                <tr>

                    <td>
                        Find by PO Number: @Html.TextBox("PONumber", ViewBag.PONumber as string)

                    </td>


                </tr>

                <tr>

                    <td>
                        @{

                            GlobCreatedFunction globbCreFunc = new GlobCreatedFunction();

                            DateTime? VeiwBagPODate = null;

                            try
                            {
                                VeiwBagPODate = Convert.ToDateTime(globbCreFunc.GetDate(ViewBag.PODate));


                            }
                            catch (Exception ex)
                            {

                            }




                        }
