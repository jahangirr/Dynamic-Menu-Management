                    </td>

                </tr>


                <tr>
                    <td>
                        Find by Mother Spr Or Indent No : @Html.TextBox("MOMSprOrIndentNo", ViewBag.MOMSprOrIndentNo as string)
                    </td>

                </tr>

                <tr>
                    <td>
                        Find by Spr Or Indent No : @Html.TextBox("SprOrIndentNo", ViewBag.SprOrIndentNo as string)
                    </td>

                </tr>
                <tr>
                    <td>
                        Find by Supplier Code : @Html.TextBox("SupplierCode", ViewBag.SupplierCode as string)

                    </td>

                </tr>
                <tr>

                    <td>
                        Find by Supplier Name : @Html.TextBox("SupplierName", ViewBag.SupplierName as string)

                    </td>


                </tr>



                <tr>
                    <td>
                        Find by Item Name : @Html.TextBox("ItemName", ViewBag.ItemName as string)

                    </td>

                </tr>
                <tr>
                    <td>
                        Find by Item Code : @Html.TextBox("ItemCode", ViewBag.ItemCode as string)

                    </td>
                </tr>
                <tr>
                    <td>
                        Find by Necessary Instruction : @Html.TextBox("NecessaryInstruction", ViewBag.NecessaryInstruction as string)
                    </td>

                </tr>

                <tr>
                    <td>
                        <input type="submit" value="Search" />
                    </td>

                </tr>

            </table>

        </p>
                            }

</div>




<script type="text/javascript">
    $(document).ready(function () {



        $('#bReset').click(function () {


            $('#PONumber').val('');
            $('#PODate').val('');
            $('#MOMSprOrIndentNo').val('');
            $('#SprOrIndentNo').val('');
            $('#SupplierCode').val('');
            $('#SupplierName').val('');
            $('#ItemName').val('');
            $('#ItemCode').val('');
            $('#NecessaryInstruction').val('');


            

            sessionStorage.setItem("PriceQuatation_PONumber", '');
            sessionStorage.setItem("PriceQuatation_SprOrIndentNo", '');
            sessionStorage.setItem("PriceQuatation_MOMSprOrIndentNo", '');
            sessionStorage.setItem("PriceQuatation_ItemCode", '');
            sessionStorage.setItem("PriceQuatation_ItemName", '');
            sessionStorage.setItem("PriceQuatation_PODate", '');
            sessionStorage.setItem("PriceQuatation_SupplierCode", '');
            sessionStorage.setItem("PriceQuatation_SupplierName", '');
            sessionStorage.setItem("PriceQuatation_NecessaryInstruction", '');


        });




        var PriceQuatation_ItemCode_value = sessionStorage.getItem("PriceQuatation_ItemCode");
        if (PriceQuatation_ItemCode_value == null) {
            sessionStorage.setItem("PriceQuatation_ItemCode", '');
        } else {
            sessionStorage.setItem("PriceQuatation_ItemCode", PriceQuatation_ItemCode_value);
        }

        var PriceQuatation_ItemName_value = sessionStorage.getItem("PriceQuatation_ItemName");
        if (PriceQuatation_ItemName_value == null) {
            sessionStorage.setItem("PriceQuatation_ItemName", '');
        } else {
            sessionStorage.setItem("PriceQuatation_ItemName", PriceQuatation_ItemName_value);
        }


        

        var PriceQuatation_SprOrIndentNo_value = sessionStorage.getItem("PriceQuatation_SprOrIndentNo");
        if (PriceQuatation_SprOrIndentNo_value == null) {
            sessionStorage.setItem("PriceQuatation_SprOrIndentNo", '');
        } else {
            sessionStorage.setItem("PriceQuatation_SprOrIndentNo", PriceQuatation_SprOrIndentNo_value);
        }

        var PriceQuatation_MOMSprOrIndentNo_value = sessionStorage.getItem("PriceQuatation_MOMSprOrIndentNo");
        if (PriceQuatation_MOMSprOrIndentNo_value == null) {
            sessionStorage.setItem("PriceQuatation_MOMSprOrIndentNo", '');
        } else {
            sessionStorage.setItem("PriceQuatation_MOMSprOrIndentNo", PriceQuatation_MOMSprOrIndentNo_value);
        }




        var PriceQuatation_PONumber_value = sessionStorage.getItem("PriceQuatation_PONumber");
        if (PriceQuatation_PONumber_value == null) {
            sessionStorage.setItem("PriceQuatation_PONumber", '');
        } else {
            sessionStorage.setItem("PriceQuatation_PONumber", PriceQuatation_PONumber_value);
        }




        var PriceQuatation_PODate_value = sessionStorage.getItem("PriceQuatation_PODate");
        if (PriceQuatation_PODate_value == null) {
            sessionStorage.setItem("PriceQuatation_PODate", '');
        } else {
            sessionStorage.setItem("PriceQuatation_PODate", PriceQuatation_PODate_value);
        }





        var PriceQuatation_SupplierCode_value = sessionStorage.getItem("PriceQuatation_SupplierCode");
        if (PriceQuatation_SupplierCode_value == null) {
            sessionStorage.setItem("PriceQuatation_SupplierCode", '');
        } else {
            sessionStorage.setItem("PriceQuatation_SupplierCode", PriceQuatation_SupplierCode_value);
        }

        var PriceQuatation_SupplierName_value = sessionStorage.getItem("PriceQuatation_SupplierName");
        if (PriceQuatation_SupplierName_value == null) {
            sessionStorage.setItem("PriceQuatation_SupplierName", '');
        } else {
            sessionStorage.setItem("PriceQuatation_SupplierName", PriceQuatation_SupplierName_value);
        }


        var PriceQuatation_NecessaryInstruction_value = sessionStorage.getItem("PriceQuatation_NecessaryInstruction");
        if (PriceQuatation_NecessaryInstruction_value == null) {
            sessionStorage.setItem("PriceQuatation_NecessaryInstruction", '');
        } else {
            sessionStorage.setItem("PriceQuatation_NecessaryInstruction", PriceQuatation_NecessaryInstruction_value);
        }






        $('#ItemCode').change(function () {

            sessionStorage.setItem("PriceQuatation_ItemCode", $('#ItemCode').val());
        });

        

        $('#SprOrIndentNo').change(function () {

            sessionStorage.setItem("PriceQuatation_SprOrIndentNo", $('#SprOrIndentNo').val());
        });

        $('#MOMSprOrIndentNo').change(function () {

            sessionStorage.setItem("PriceQuatation_MOMSprOrIndentNo", $('#MOMSprOrIndentNo').val());
        });

        $('#PONumber').change(function () {

            sessionStorage.setItem("PriceQuatation_PONumber", $('#PONumber').val());
        });

        $('#PODate').change(function () {

            sessionStorage.setItem("PriceQuatation_PODate", $('#PODate').val());
        });
        $('#SupplierCode').change(function () {

            sessionStorage.setItem("PriceQuatation_SupplierCode", $('#SupplierCode').val());

        });




        $('#SupplierName').change(function () {

            sessionStorage.setItem("PriceQuatation_SupplierName", $('#SupplierName').val());

        });

        $('#NecessaryInstruction').change(function () {

            sessionStorage.setItem("PriceQuatation_NecessaryInstruction", $('#NecessaryInstruction').val());

        });



        $('#ItemName').change(function () {

            sessionStorage.setItem("PriceQuatation_ItemName", $('#ItemName').val());

        });








        $("#SearchInfoTable tr").each(function () {
            $(this).hide();
        });

        $("#selectionItems").change(function () {

            $("#SearchInfoTable tr").each(function () {
                var row_index = $(this).index();
                var ddlValue = $("#selectionItems").val();
                if (ddlValue.toString() == row_index.toString()) {
                    $(this).show();
                }
                else {
                    $(this).hide();
                }

            });


            var ItemCode = sessionStorage.getItem("PriceQuatation_ItemCode");
            var ItemName = sessionStorage.getItem("PriceQuatation_ItemName");
            var SprOrIndentNo = sessionStorage.getItem("PriceQuatation_SprOrIndentNo");
            var MOMSprOrIndentNo = sessionStorage.getItem("PriceQuatation_MOMSprOrIndentNo");
            var PONumber = sessionStorage.getItem("PriceQuatation_PONumber");
            var PODate = sessionStorage.getItem("PriceQuatation_PODate");
            var SupplierCode = sessionStorage.getItem("PriceQuatation_SupplierCode");
            var SupplierName = sessionStorage.getItem("PriceQuatation_SupplierName");
            var NecessaryInstruction = sessionStorage.getItem("PriceQuatation_NecessaryInstruction");



            var ListOfSelectedValue = 'Item Code : ' + ItemCode + '|| Mother SPR or Indent No :' + MOMSprOrIndentNo + '||  Spr Or Indent No : ' + SprOrIndentNo + '||  PO Number : ' + PONumber + '||  PO Date : ' + PODate + '||  SupplierCode : ' + SupplierCode + '||  SupplierName : ' + SupplierName
            + '||Necessary Instruction : ' + NecessaryInstruction + '||   ItemName : ' + ItemName;

            $('#selectionDivToShow').html(ListOfSelectedValue.toString());


        });




    });
</script>


