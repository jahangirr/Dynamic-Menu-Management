@model IEnumerable<SilGlobalFashion.Models.CompanyGrowth>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    Html.RenderPartial("MenuView");
    ViewBag.Title = "List of Company Growth";
}

<h2>List of Company Growth</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StartDay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Growth)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StartDay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Growth)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
